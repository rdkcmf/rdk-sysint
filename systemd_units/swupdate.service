[Unit]
Description=Software Update Service

After=local-fs.target nvram.service previous-log-backup.service network-online.target dcm-log.service systemd-timesyncd.service tr69hostif.service
Requires=network-online.target 

[Service]
Type=oneshot
ExecStartPre=/bin/sh -c '/bin/touch /opt/logs/swupdate.log'
ExecStart=/bin/sh -c '/lib/rdk/swupdate_utility.sh > /opt/logs/swupdate.log &'
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
